# Server port
PORT=4000

# MongoDB connection.
# Si está definido aquí, la API SIEMPRE usará esta URI (ej. Atlas), aunque Docker esté levantado.
# En producción MONGODB_URI es obligatorio (URI válida).
# Opcionales (por defecto: maxPoolSize=10, serverSelectionTimeoutMS=5000, socketTimeoutMS=45000):
# MONGODB_MAX_POOL_SIZE=10
# MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000
# MONGODB_SOCKET_TIMEOUT_MS=45000
MONGODB_URI=mongodb://localhost:27017/kds